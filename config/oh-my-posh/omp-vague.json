{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",

    "palette": {
        "closer": "p:white",
        "red": "#d8647e",
        "purple": "#bb9dbd",
        "blue": "#6394b2",
        "green": "#7fa563",
        "yellow": "#f3be7c",
        "orange": "#e6917d",
        "white": "#cdcdcd"
    },
    "blocks": [
        {
            "alignment": "left",

            "segments": [
                {
                    "foreground": "p:blue",

                    "properties": {
                        "style": "full"
                    },
                    "style": "plain",

                    "template": "{{ .Path }} ",
                    "type": "path"
                },
                {
                    "foreground": "p:green",
                    "foreground_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#f3be7c{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#cdcdcd{{ end }}",
                        "{{ if gt .Ahead 0 }}#bb9dbd{{ end }}",
                        "{{ if gt .Behind 0 }}#bb9dbd{{ end }}"
                    ],
                    "properties": {
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "native_fallback": true
                    },
                    "template": "<#cdcdcd>on</> {{ .HEAD }}{{ if gt .Ahead 0 }} \u2191{{ .Ahead }}{{ end }}{{ if gt .Behind 0 }} \u2193{{ .Behind }}{{ end }}{{ if .Staging.Changed }}<#e6917d> \uf046 {{ .Staging.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}",
                    "style": "accordion",
                    "type": "git"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "p:closer",
                    "style": "plain",
                    "template": "at",
                    "type": "text"
                },
                {
                    "type": "time",
                    "style": "plain",
                    "foreground": "p:red",
                    "properties": {
                        "time_format": "15:04:05"
                    }
                },
                {
                    "foreground": "p:closer",
                    "style": "plain",
                    "template": "\uf105",
                    "type": "text"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 3
}
